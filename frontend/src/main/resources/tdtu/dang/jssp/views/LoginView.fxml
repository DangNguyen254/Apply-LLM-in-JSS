<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loginContainer" alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0"
      stylesheets="@../styles/style_pro.css" xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tdtu.dang.jssp.controllers.LoginViewController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>
    
    <Label styleClass="login-title" text="JSSP Orchestrator"/>
    <VBox spacing="10.0">
        <Label styleClass="login-label" text="Username"/>
        <TextField fx:id="usernameField" promptText="admin"/>
    </VBox>
    <VBox spacing="10.0">
        <Label styleClass="login-label" text="Password"/>
        <PasswordField fx:id="passwordField" promptText="••••••••"/>
    </VBox>
    
    <Label fx:id="errorLabel" styleClass="login-error-label" managed="false" text="Invalid username or password."/>
    
    <Button fx:id="loginButton" onAction="#handleLoginButton" onKeyPressed="#handleLoginKeyPress"
            text="Sign In" prefWidth="320.0"/>
</VBox>
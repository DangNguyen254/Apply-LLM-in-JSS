<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="725.0" prefWidth="957.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tdtu.dang.jssp.controllers.MainViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <BorderPane prefWidth="450.0">
         <BorderPane.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>

         <center>
               <VBox spacing="10.0" styleClass="container-box">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label text="Job Definitions:" />
                     <TreeView fx:id="jobTreeView" VBox.vgrow="ALWAYS" />
                     <Label text="Machine Definitions:" />
                     <TextArea fx:id="machineDisplayArea" editable="false" focusTraversable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                  </children>
               </VBox>
         </center>

         <bottom>
               <VBox prefHeight="200.0" styleClass="container-box">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <children>
                     <Label prefHeight="30.0" prefWidth="45.0" text="Result:" />
                     <TextArea fx:id="resultDisplayArea" editable="false" focusTraversable="false" prefWidth="430.0" wrapText="true" />
                  </children>
                  <BorderPane.margin>
                     <Insets top="5.0" />
                  </BorderPane.margin>
               </VBox>
         </bottom>
      </BorderPane>
   </left>
   
   <center>
      <VBox prefHeight="644.0" prefWidth="718.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="chart-title" text="Gantt Chart">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <ScrollPane prefHeight="353.0" prefWidth="477.0" styleClass="gantt-scroll-pane" VBox.vgrow="ALWAYS">
               <content>
                  <AnchorPane fx:id="ganttChartPane" styleClass="gantt-chart-pane" />
               </content>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </ScrollPane>
            
            <HBox alignment="CENTER_LEFT" prefHeight="425.0" spacing="10.0">
               <children>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0" spacing="10.0">
                           <children>
                              <Label text="Prompt:" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitButton" text="Submit" />
                              <Button fx:id="solveButton" mnemonicParsing="false" onAction="#handleSolveButton" text="Solve" />
                              <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleResetButton" text="Reset" />
                           </children>
                        </HBox>
                        <TextArea fx:id="promptInput" onKeyPressed="#handlePromptKeyPress" prefHeight="60.0" prefWidth="450.0" promptText="e.g., Add a job abc that needs the Cutter for 3 hours..." wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="25.0">
                           <children>
                              <Label text="Status &amp; Logs:" />
                           </children>
                        </HBox>
                        <TextArea fx:id="statusDisplayArea" editable="false" focusTraversable="false" prefHeight="62.0" prefWidth="478.0" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>

</BorderPane>
